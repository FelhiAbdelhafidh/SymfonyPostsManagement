{{include ('pages/inc/header.html.twig')}}
<div class="container">
    <div class="row">
        <a href="{{absolute_url(asset(''))}}app_dev.php/post/create" class="btn btn-primary">Create View </a>
    </div>
    <h3>View Posts</h3>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Post Id</th>
                <th>Post Title</th>
                <th>Post Description </th>
                <th>Post Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for p in posts
            %} 
            <tr >
                 <td>{{p.getId()}}</td>
                <td>{{p.getTitle()}}</td>
                <td>{{p.getDescription()}}</td>
                <td>{{p.getCategory()}}</td>
                <td>
                    <a href="{{absolute_url(asset(''))}}app_dev.php/post/show/{{p.getId()}}" class="btn btn-primary btn-sm">View</a>
                    <a href="{{absolute_url(asset(''))}}app_dev.php/post/update/{{p.getId()}}" class="btn btn-success btn-sm">Edit</a>
                    <a  href="{{absolute_url(asset(''))}}app_dev.php/post/delete/{{p.getId()}}" class="btn btn-danger btn-sm" onclick="return confirm('are u sure deleting this post?')">Delete</a>
                    
                
                </td>
            </tr>
            {% else  %}
                <tr class="info">
                    <td>No data found</td>

                </tr>
                {% endfor %}

                </tbody>
            </table> 
        </div>
   
    {{include ('pages/inc/footer.html.twig')}}
